<div class="form">
<h2 class="form-label">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'textarea'%>
  </div>

  <div class="field">
    <%= f.label :パスワード  %>
    <%= f.password_field :password, autocomplete: "current-password" , class: 'textarea' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me , class: 'check_box'%>
      <%= f.label :次回から省略する , class: 'label' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit  "ログイン" , class: ' btn btn-login' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
